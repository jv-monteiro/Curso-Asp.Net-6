@Model Lanche

<div class="container">
    <div class="row">
        <div class="card">
            <img src="@Model.ImageUrl" />
            <h4 >@Model.LancheNome</h4>
            <h5>@Model.preco</h5>
            <div>
                <p class="button">
                    <a class="btn btn-primary" asp-controller="Lanche" asp-action="List"> Continuar Comprando </a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarAoCarrinho" asp-route-LancheId="@Model.LancheId">
                        Incluir no Carrinho
                    </a>
                </p>
            </div>
    </div>
</div>
