@model Lanche

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImageUrl" class="img-fluid" style="max-width: 250px; height:100px" /></p>

    <a asp-controller="Lanche" asp-action="Details" asp-route-LancheId="@Model.LancheId">
        @Model.LancheNome
    </a>

    <h3>Preço: @Model.preco.ToString("c")</h3>
    <p>@Model.Descricao</p>
    
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarAoCarrinho" asp-route-LancheId="@Model.LancheId">
                Incluir no Carrinho
            </a>
        </p>
    </div>
    
</div>